/* pages/homepage/enrollInfo/enrollInfo.wxss */


.head_view{
  padding: 120rpx 40rpx;font-size: 30rpx;color: white;background: #50acfb;
}
.content_view{
  padding: 0 30rpx;background: white;
}
.input_view{
  padding: 20rpx 0;background: white;border-bottom: 1rpx solid #f2f2f2;
}
.input_view .name{
  font-size: 28rpx;color: #333;margin: auto 0;margin-right: 20rpx;
}
.input_name{
  margin-left: 20rpx;margin: auto 0;
}
.input_name input{
  width: 100%;height: 40rpx;line-height: 40rpx;font-size: 28rpx;text-align: right;
}
.input_view>image{
  width: 30rpx;height: 30rpx;margin: auto 0;
}


.submit_bu{
  padding: 25rpx 0;background: white;line-height: normal;border-radius: 0;font-size: 30rpx;color: #50acfb;
}
.submit_bu::after{
  content: none;
}