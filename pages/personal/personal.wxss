/* pages/trainingCourse/trainingCourse.wxss */





.item_view{
  background: white;margin-top: 20rpx;
}
.left_view{
  background: #50acfb;
}
.year{
  padding: 10rpx;font-size: 28rpx;color: white;
}
.month{
  font-size: 32rpx;color: white;width: 50rpx;margin: 0 auto;text-align: center;
}

.right_view{
  padding: 0 30rpx;
}
.title_view{
  padding: 60rpx 0;
}
.title_view>view{
  font-size: 40rpx;color: #333;font-weight: bold;margin: auto 0;
}
.title_view image{

  width: 40rpx;height: 40rpx;display: block;margin: auto 0;
}
.organizers_view{
  font-size: 25rpx;color: #999;
}
.date_view{
  font-size: 25rpx;color: #999;padding-bottom: 20rpx;
}




.input_view{
  background: white;padding: 15rpx 30rpx;border-top: 1rpx solid #f2f2f2;position: fixed;top: 0;width: calc(100% - 60rpx);z-index: 10;
}
.type_input{
  background: #f2f2f2;border-radius: 30rpx;
}
.icon_view{
  margin: auto 20rpx;padding: 10rpx 0;
}
.input_n{
  flex: 1;
}
.input_n input{
  font-size: 28rpx;color: #666;line-height: 40rpx;padding: 10rpx 0;
}





.phone_model_view{
  position: fixed;top: 20%;width: 70%;left: 15%;background: white;border-radius: 20rpx;z-index: 30;
}
.phone_model_view .title{
  font-size: 30rpx;color: #333;padding: 30rpx 0;text-align: center;border-bottom: 1rpx solid #f2f2f2;
}
.phone_model_view .content{
  font-size: 28rpx;color: #666;padding: 40rpx 30rpx;margin-bottom: 20rpx;
}
.phone_model_view .boto{
  border-top: 1rpx solid #f2f2f2;
}
.phone_model_view .boto .cancel{
  flex: 1;text-align: center;margin: auto 0;font-size: 30rpx;padding: 30rpx 0;color: #999;
}
.phone_model_view .boto .ok{
  flex: 1;line-height: normal;font-size: 30rpx;margin: auto 0;border-left: 1rpx solid #f2f2f2;padding: 30rpx 0;background: white;
}
.phone_model_view .boto .ok::after{
  content: none;
} 