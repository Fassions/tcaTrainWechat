/* pages/trainingCourse/studentSchedule/studentSchedule.wxss */

.item_view{
  background: white;border-radius: 10rpx;margin: 0 30rpx;
}
.item_d_view{
  width: 100%;background: #50acfb;border-top-left-radius: 20rpx;border-top-right-radius: 20rpx;padding: 8rpx 0;
}
.item_date{
  font-size: 32rpx;color: #333;padding: 20rpx 0;margin: 0 30rpx;border-bottom: 1rpx solid #f2f2f2;
}
.item_course_view{
  padding: 10rpx 30rpx;
}

.course_name{
  font-size: 40rpx;font-weight: bold;color: #333;padding: 10rpx 0;
}
.course_author{
  font-size: 30rpx;color: #666;padding-bottom: 10rpx;
}
.course_time{
  padding-bottom: 20rpx;
}
.course_date{
  color: #999;font-size: 30rpx;flex: 1;margin: auto 0;
}
.course_adress{
  margin: auto 0;
}
.course_adress image{
  width: 38rpx;height: 43rpx;display: block;margin: auto 0;
}
.course_adress>view{
  font-size: 30rpx;padding-left: 15rpx;color: #999;
}