/* pages/trainingCourse/studentEstimateAll/studentEstimateAll.wxss */

.head_view{
  border-top: 1rpx solid #f2f2f2;border-bottom: 1rpx solid #f2f2f2;padding: 15rpx 0;background: white;
}
.left_image{
  width: 100rpx;height: 100rpx;margin: 0 30rpx;
}
.right_view{

}
.right_view>view{
  font-size: 35rpx;color: #333;font-weight: bold;
}


.x_view{
  padding: 20rpx 30rpx;background: white;justify-content: left;
}
.x_view .name{
  font-size: 28rpx;color: #333;margin: auto 0;
}
.xx_image{
  margin: auto 30rpx;
}
.xx_image image{
  width: 45rpx;height: 45rpx;margin-right: 20rpx;
}
.h_h{
  font-size: 28rpx;color: #999;margin: auto 0;
}



.textArea_view{
  border-top: 1rpx solid #f2f2f2;background: white;
}
.textArea_view textarea{
  font-size: 30rpx;padding: 20rpx 30rpx;
}













.bottom_view{
  background: white;border-top: 1rpx solid #f2f2f2;position: fixed;bottom: 0;width: 100%;
}
.check_view{
  margin: auto 0;padding-left: 30rpx;
}
.check_view image{
  width: 50rpx;height: 50rpx;display: block;padding-right: 20rpx;
}
.check_view>view{
  color: #333;font-size: 32rpx;margin: auto 0;
}

.send_view{
  font-size: 35rpx;background: #50acfb;color: white;padding: 25rpx 30rpx;border-radius: 0;line-height: normal;
}
.send_view::after{
  content: none;border: none;
}