/* pages/trainingCourse/estimate/estimate.wxss */

.head_view{
  position: relative;width: 100%;
}
.head_view .content{
  position: absolute;top: 0;left: 0;width: 100%;z-index: 10;height: 100%;
}
.content .name{
  color: rgba(255, 255, 255, 0.8);font-size: 25rpx;margin: 0 auto;
}
.content .f_num{
  color: white;font-size: 70rpx;margin: 0 auto;font-weight: bold;
}
.dec{
  color: white;font-size: 25rpx;margin: 0 auto;
}

.head_view .back_image{
  width: 100%;height: 100%;vertical-align: middle;
}


.c_k_view{
  font-size: 25rpx;width: 130rpx;padding: 5rpx 15rpx;color: white;background: rgba(255, 255, 255, 0.3);border-radius: 30rpx;margin-left: calc(50% - 81rpx);text-align: center;border: 1rpx solid rgba(255, 255, 255, 0.6);margin-top: 15rpx;
}

.right_po_view{
  position: absolute;z-index: 11;right: 40rpx;top: 0;text-align: right;
}
.c_y_l{
  color: rgba(255, 255, 255, 0.8);font-size: 25rpx;padding: 15rpx 0;
}
.w_c_y{
  background: white;font-size: 25rpx;color: #50acfb;padding: 5rpx 15rpx;border-radius: 30rpx;
}




.item_view{
  padding: 30rpx;background: white;margin-bottom: 20rpx;
}
.item_view .left_view{

}
.left_view .name{
  font-size: 28rpx;color: #999;
}
.title{
  font-size: 30rpx;color: #333;
}
.other{

}
.other>view{
  font-size: 28rpx;color: #999;display: inline-block;
}

.item_view .right_view{

}
.right_view .name_view{
  background: #eee;border-radius: 35rpx;padding: 15rpx 20rpx;
}
.name_view_on{
  background: #50acfb;border-radius: 35rpx;padding: 15rpx 20rpx;
}
.name_view .name{
  color: #999;font-size: 28rpx;margin: auto 0;padding-left: 10rpx;
}
.name_view_on .name_on{
  color: white;font-size: 28rpx;margin: auto 0;padding-right: 10rpx;
}
.name_view_on .yuan, .name_view .yuan{
  width: 36rpx;height: 36rpx;background: white;border-radius: 50%;margin: auto 0;
}