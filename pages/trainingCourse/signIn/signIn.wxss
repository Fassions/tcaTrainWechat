/* pages/trainingCourse/signIn/signIn.wxss */

.head_view{
  position: relative;width: 100%;height: 30%;
}
.head_view .content{
  position: absolute;top: 80rpx;left: 0;width: 100%;z-index: 10;
}
.content .name{
  width: 160rpx;height: 160rpx;margin-left: calc(50% - 80rpx);border-radius: 50%;background: white;color: #50acfb;font-size: 32rpx;line-height: 160rpx;text-align: center;font-weight: bold;
}
.content .times{
  width: 100%;padding: 10rpx 0;color: white;font-size: 25rpx;text-align: center;
}
.head_view .back_image{
  width: 100%;height: 100%;vertical-align: middle;
}
.head_view .y_image{
  position: absolute;vertical-align: middle;z-index: 2;
}
.content .not_num{
  width: 160rpx;height: 160rpx;margin-left: calc(50% - 80rpx);border-radius: 50%;background: white;
}
.not_num .num{
  font-size: 40rpx;color: #3c94e0;font-weight: bold;margin: 0 auto;
}
.not_num .not{
  font-size: 22rpx;color: #3c94e0;margin: 0 auto;
}
.c_k_view{
  font-size: 25rpx;width: 100rpx;padding: 5rpx 15rpx;color: #3c94e0;background: rgba(255, 255, 255, 0.8);border-radius: 30rpx;margin-left: calc(50% - 66rpx);text-align: center;border: 1rpx solid #3c94e0;margin-top: 15rpx;
}





.psw_view{
  padding: 30rpx;background: white;
}
.psw_view .psw{
  
}
.psw_view .psw .psw_item{
  padding: 15rpx 40rpx;border: 1rpx solid #f2f2f2;border-right: none;font-size: 30rpx;height: 40rpx;line-height: 40rpx;
}
.psw_item_index_1{
  border-top-left-radius: 8rpx;border-bottom-left-radius: 8rpx;
}
.psw_item_index_4{
  border-top-right-radius: 8rpx;border-bottom-right-radius: 8rpx;border-right: 1rpx solid #f2f2f2 !important;
}
.psw_view .name{
  width: 100%;padding: 10rpx 0;color: #999;font-size: 25rpx;text-align: center;
}



.wrui_row_list_image_view{
  padding: 10rpx 0;background: white;
}
.wrui_row_list_image_item{
  width: 25%;position:relative;display:-webkit-flex;display:flex;-webkit-box-align:center;flex-direction: column;justify-content: center;padding: 40rpx 0;
}
.wrui_row_list_image_item image{
  height: 70rpx;margin: 0 auto;display: block;width: 70rpx;
}
.wrui_row_list_image_item>view{
  font-size: 28rpx;color: #666;width: 100%;text-align: center;padding: 10rpx 0;
}









.person_type_view{
  padding: 25rpx 30rpx;background: white;border-bottom: 1rpx solid #f2f2f2;
}
.type_head_image{
  width: 40rpx;height: 40rpx;display: block;margin: auto 0;
}
.type_left_view{
  flex: 1;font-size: 30rpx;color: #333;margin: auto 10rpx;
}
.type_right_view{
  color: red;font-size: 25rpx;margin: auto 0;margin-right: 10rpx;
}
.type_right_image{
  width: 35rpx;height: 35rpx;display: block;margin: auto 0;
}