      <navigator class='wrui_row_list_image_item' url='{{item.to}}' style='width: {{100/homeTab.length}}%;'>
        <image src='{{item.image}}' style='{{item.style}}'></image>
        <view>{{item.name}}</view>
      </navigator>
    </block>
  </view>
