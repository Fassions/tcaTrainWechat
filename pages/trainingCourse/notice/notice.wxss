/* pages/trainingCourse/notice/notice.wxss */

.not_notice_view{
  width: 100%;height: 100%;
}
.not_notice_view .dec{
  font-size: 28rpx;color: #999;padding: 30rpx 0;text-align: center;
}
.not_notice_view .bt{
  background: #50acfb;color: white;margin: 0 auto;border-radius: 30rpx;font-size: 30rpx;padding: 15rpx 40rpx;
}

.notice_item_view{
  padding: 20rpx 0;border-top: 1rpx solid #f2f2f2;background: white;
}
.item_head_view{
  padding: 10rpx 0;
}
.item_head_view image{
  width: 100rpx;height: 100rpx;border-radius: 50%;margin: 0 30rpx;
}
.item_head_view>view{
  font-size: 28rpx;color: #999;margin: auto 0;
}
.item_content{
  font-size: 28rpx;color: #999;padding: 10rpx 30rpx;
}




.bottom_view{
  background: #50acfb;color: white;position: fixed;width: 100%;bottom: 0;left: 0;padding: 25rpx 0;font-size: 32rpx;text-align: center;
}